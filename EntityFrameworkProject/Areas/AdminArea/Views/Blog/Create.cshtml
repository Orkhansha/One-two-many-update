@model BlogCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3>Blog</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="form-group">
            <label for="name">Title</label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text-danger my-1" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" asp-for="Desc">
            <span class="text-danger my-1" asp-validation-for="Desc"></span>
        </div>
        
        <a class="btn btn-primary" asp-controller="Blog" asp-action="Index">Back</a>
        <a class="btn btn-warning" asp-controller="Blog" asp-action="Create">Reset</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
